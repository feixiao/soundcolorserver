
#shortcuts {
  display: flex;
  flex-direction: row;

  .icon-button {
    padding: 20px;
    --icon-color: var(--white);
    background: transparent;
    border: none;
    flex: 1;
    margin: 0;

    &:hover {
      --icon-color: var(--grey-50);
    }

    &:active {
      --icon-color: var(--grey-60);
    }
  }
}
