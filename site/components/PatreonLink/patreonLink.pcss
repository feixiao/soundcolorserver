
.patreon-link {
  display: flex;
  flex-shrink: 1;
  flex-direction: row;
  align-items: center;
  padding: 10px 24px;
  background: #f96854;
  color: #ffffff;
  border-radius: 4px;
  font-size: 12px;
  line-height: 20px;

  &:hover {
    background: #d14c36;
  }

  .icon {
    margin-right: 10px;
  }
}
