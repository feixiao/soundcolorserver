
.pattern-info {
  margin-top: 32px;
  display: flex;
  flex-direction: column;

  & + & {
    margin-top: 48px;
  }

  .pattern-description {
    font-size: 14px;
    line-height: 22px;
  }

  .button-wrapper {
    margin-top: 24px;
    display: flex;
    flex-direction: row;
    justify-content: center;

    .pattern-button {
      padding: 10px 24px;
      border-radius: 4px;
      margin: 0;
    }
  }
}