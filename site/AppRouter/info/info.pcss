    h2 {
        font-size: 13px;
        font-weight: 600;
        color: var(--grey-60);
    }

    h3 {
        font-size: 17px;
        font-weight: 600;
    }

    .section, .footer {
        max-width: 344px;
        text-align: center;

        @mixin breakpoint mobile {
            margin: 104px auto;
            text-align: left;
            max-width: 480px;
        }
    }

    .color-pattern {
        display: flex;
        max-width: 528px;
        margin: 56px auto;

        @mixin breakpoint minitab {
            display: block;
        }

        .pattern-title {
            width: 100%;
            max-width: 192px;
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            margin-right: 48px;

            @mixin breakpoint minitab {
                max-width: 100%;
                align-items: flex-start;
                margin-bottom: 16px;
            }

            .pattern-highlight {
                width: 58px;
                height: 2px;
                right: 0;
                margin-bottom: 8px;
            }

            span {
                font-size: 9px;
                font-weight: 600;
                color: var(--grey-60);
            }

            p {
                font-size: 21px;
                font-weight: 700;
                color: var(--grey-80);
                margin: 0;
            }

        }

        .pattern-description {
            width: 100%;
            max-width: 288px;

            @mixin breakpoint minitab {
                max-width: 100%;
            }

            a {
                margin-top: 8px;
            }

            p {
                font-size: 11px;
            }
        }
    }

    .section {
        a {
            margin-top: 24px;
            display: inline-flex;

            svg {
                padding-right: 8px;
            }
        }

        .divider {
            width: 16px;
            height: 2px;
            background: var(--grey-20);
            margin: 24px auto 32px;

            @mixin breakpoint mobile {
                margin: 24px 0 32px;
            }
        }

        input {
            display: block;
            width: 100%;
            background: var(--white);
            border: 1px solid var(--grey-10);
            padding: 12px;
            border-radius: 4px;
            margin-top: 16px;
            box-sizing: border-box;
            font-weight: 500;
        }

        textarea {
            display: block;
            width: 100%;
            background: var(--white);
            border: 1px solid var(--grey-10);
            padding: 12px;
            border-radius: 4px;
            margin-top: 16px;
            resize: vertical;
            min-height: 80px;
            box-sizing: border-box;
            font-weight: 500;
        }
    }

    .origins {
        text-align: left;
    }

    .footer {
        p {
            color: var(--grey-40);
        }
    }

}
