{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "lib": ["es2015", "es2016", "es2017", "esnext.asynciterable", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "outDir": "tmp"
  },
  "include": [
    "server",
    "shared",
    "site"
  ],
  "exclude": [
    "node_modules"
  ]
}
